  <content_rating type="oars-1.1" />
  <releases>
    <release version="1.9" date="2025-04-18">
      <description translatable="no">
        <ul>
          <li>Restore behavior of listing by most recently used</li>
          <li>Use GNOME 47</li>
        </ul>
      </description>
    </release>
    <release version="1.8" date="2024-04-01">
      <description translatable="no">
        <ul>
          <li>Improve mobile support / portrait layout</li>
          <li>Improve touch support, long press will show dektop actions</li>
          <li>Fix an issue with encoded characters in URLs</li>
          <li>Use GNOME 46</li>
        </ul>
      </description>
    </release>
    <release version="1.7" date="2023-05-14">
      <description translatable="no">
        <ul>
          <li>Support multiple lines of options (scroll)</li>
          <li>Support mobile form factors</li>
          <li>Add a close button</li>
          <li>Make the window temporarily resizable</li>
          <li>Use GNOME 44</li>
        </ul>
      </description>
    </release>
    <release version="1.6" date="2022-10-15">
      <description translatable="no">
        <ul>
          <li>Use GNOME 43</li>
          <li>Fix the list of recommended applications</li>
          <li>Fix broken icons for some applications</li>
          <li>Improve internals</li>
        </ul>
      </description>
    </release>
    <release version="1.5.0" date="2022-01-19">
      <description translatable="no">
        <ul>
          <li>Add an option "Reveal in Folder" for files</li>
          <li>Reveal document portal file paths</li>
          <li>Bug fix for desktop actions</li>
          <li>Bug fix when opening with Libreoffice</li>
        </ul>
      </description>
    </release>
    <release version="1.4.0" date="2021-12-23">
      <description translatable="no">
        <ul>
          <li>Support desktop actions</li>
          <li>Support snap applications</li>
        </ul>
      </description>
    </release>
    <release version="1.3.0" date="2021-12-12">
      <description>
        <ul>
          <li>Improve design</li>
          <li>New icon</li>
          <li>Add a x-junction:// protocol API</li>
          <li>Do not automatically set as default application</li>
          <li>Fix missing options</li>
          <li>Limit the number of options to 4</li>
          <li>Add an option to open with any application</li>
          <li>Add a System Information panel in the about dialog</li>
        </ul>
      </description>
    </release>
    <release version="1.2.0" date="2021-11-14" urgency="high">
      <description translatable="no">
        <ul>
          <li>Fix for applications that do not support URIs</li>
          <li>Add an option to display application names</li>
          <li>Add a menu button</li>
          <li>Improve design</li>
          <li>Improve keyboard usage</li>
          <li>Improve CLI usage</li>
          <li>Support opening multiple URIs</li>
          <li>Support D-Bus activation</li>
          <li>Use libadwaita</li>
        </ul>
      </description>
    </release>
    <release version="1.1.0" date="2021-10-20" urgency="high">
      <description translatable="no">
        <ul>
          <li>Fix for missing applications</li>
          <li>Add a Shortcuts window - accessible with &lt;Ctrl&gt;?</li>
        </ul>
      </description>
    </release>
    <release version="1.0.0" date="2021-10-16">
      <description
      >This is the first release of Junction. We hope you like it.</description>
    </release>
  </releases>
  <kudos>
    <kudo>HiDpiIcon</kudo>
    <kudo>HighContrast</kudo>
    <kudo>ModernToolkit</kudo>
  </kudos>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>

  <branding>
    <color type="primary" scheme_preference="light">#F8ED9E</color>
    <color type="primary" scheme_preference="dark">#AA7B07</color>
  </branding>
  <custom>
    <value
      key="GnomeSoftware::key-colors"
    >[(248, 237, 158), (170, 123, 7)]</value>
  </custom>
</component>
